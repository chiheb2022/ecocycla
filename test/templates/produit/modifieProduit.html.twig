{% block title %}modifier produits{% endblock %}

{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Formualire de modification Produit</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Forms</li>
                    <li class="breadcrumb-item active">Produits</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-6">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">modifier Produit</h5>

                            <!-- General Form Elements -->
                            {{ form_start(f) }}
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">Nom </label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.nomP,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">Prix </label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.prixP,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputPassword" class="col-sm-4 col-form-label">Description</label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.descriptionP,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>


                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">Quantite</label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.quantiteP,{'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">

                                <label for="nom">Categorie</label>

                                {{ form_widget(f.Categorie, {'attr': {'class': 'form-control'}}) }}
