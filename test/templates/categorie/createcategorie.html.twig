{% extends 'base.html.twig' %}
{% block title %}ajouter categorie{% endblock %}

{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Formualire Ajout categorie</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Forms</li>
                    <li class="breadcrumb-item active">categories</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-6">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Ajouter categorie</h5>

                            <!-- General Form Elements -->
                            {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">Nom categorie </label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.nomC,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(f.nomC,{'attr':{'class':'text-danger'}}) }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">description categorie </label>
                                <div class="col-sm-10">
                                    {{ form_widget(f.descriptionC,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(f.descriptionC,{'attr':{'class':'text-danger'}}) }}
                                </div>
                            </div>




                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="col-sm-4 btn btn-primary">Ajouter </button>
                                </div>
                            </div>
                            {{ form_end(f) }}

                        </div>
                    </div>
                </div>

            </div>


            </div>
        </section>

    </main>

{% endblock %}